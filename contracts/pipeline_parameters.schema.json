{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "contracts/pipeline_parameters.schema.json",
  "title": "PhotoSorter Pipeline Parameters",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "device": {
      "type": "string",
      "enum": ["auto", "cpu", "mps"],
      "default": "auto"
    },
    "batch_size": {
      "type": "integer",
      "minimum": 1,
      "default": 16
    },
    "pooling": {
      "type": "string",
      "enum": ["cls", "avg", "cls+avg"],
      "default": "cls"
    },
    "distance_threshold": {
      "type": "number",
      "exclusiveMinimum": 0,
      "default": 0.4
    },
    "linkage": {
      "type": "string",
      "enum": ["average", "complete", "single"],
      "default": "average"
    },
    "temporal_weight": {
      "type": "number",
      "minimum": 0,
      "default": 0.0
    }
  }
}
